<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="452.0" prefWidth="283.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.budgetingapp.BudgetController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <ScrollPane prefHeight="200.0" prefWidth="200.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="226.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="226.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="200.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label fx:id="netWorthLabel" text="Net Worth" />
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                       <children>
                                          <Label contentDisplay="RIGHT" style="-fx-padding: 5;" text="\$">
                                             <HBox.margin>
                                                <Insets left="24.0" />
                                             </HBox.margin>
                                          </Label>
                                          <Label style="-fx-padding: 5;" text="100" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <Label prefWidth="100.0" style="-fx-padding: 5;" text="Credit" />
                              <Label style="-fx-padding: 5;" text="\$" />
                              <Label fx:id="creditLabel" alignment="CENTER" style="-fx-padding: 5;" text="100" />
                           </children>
                        </HBox>
                        <HBox prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <Label prefWidth="100.0" style="-fx-padding: 5;" text="Chequing" />
                              <Label style="-fx-padding: 5;" text="\$" />
                              <Label alignment="CENTER" style="-fx-padding: 5;" text="100" />
                           </children>
                        </HBox>
                        <HBox prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <Label prefWidth="100.0" style="-fx-padding: 5;" text="Savings" />
                              <Label style="-fx-padding: 5;" text="\$" />
                              <Label alignment="CENTER" style="-fx-padding: 5;" text="100" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onNewOperationButtonClick" text="Add New Account" />
         </children>
      </HBox>
      <Label text="Remaining Expenses " />
      <ProgressBar prefWidth="200.0" progress="0.0" />
      <HBox alignment="BOTTOM_CENTER" prefHeight="38.0" prefWidth="243.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onTransactionButtonClick" text="New Transaction" />
         </children>
      </HBox>
   </children>
</VBox>
